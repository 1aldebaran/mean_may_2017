<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message Board</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="container">
      <h2>The Dojo Message Board</h2>
      <form action="/posts/create" method="post">
        <label>Name: <input type="text" name="name_post" placeholder="Name"></label>
        <label>Message: <textarea name="post" rows="5" cols="30"></textarea></label>
        <input type="submit" value="Post message">
      </form>
      <% for (var i in posts) { %>
        <h4>Post</h4>
        <p>Name: <%= posts[i].name_post %></p>
        <p>Message: <%= posts[i].post %></p>
        <h4>Comment(s)</h4>
        <% var comments = posts[i].comments %>
        <% comments.forEach(function(comment) { %>
          <!-- <%= comment %> -->
          <p>Name: <%= comment.name_comment %></p>
          <p>Comment: <%= comment.comment %></p>
        <% }); %>
        <form action="/comments/create/<%= posts[i]._id %>" method="post">
          <label>Name: <input type="text" name="name_comment" placeholder="Name"></label>
          <label>Comment: <textarea name="comment" rows="5" cols="30"></textarea></label>
          <input type="submit" value="Add comment">
        </form>
        <hr>
      <% } %>


    </div>

  </body>
</html>
